FROM node:20.11.1-alpine3.19 as build

WORKDIR /usr/src/app

COPY . .

# Combine apk commands to reduce layers and improve efficiency
RUN apk upgrade --update && apk --no-cache add git

# Set NODE_OPTIONS environment variable once for the required steps
ENV NODE_OPTIONS="--max-old-space-size=4096 --openssl-legacy-provider"

# Install dependencies
RUN npm install --legacy-peer-deps

# Build the application
RUN npm run build

FROM nginx:1.25.3-alpine3.18-slim

COPY --from=build /usr/src/app/dist /usr/share/nginx/html
COPY --from=build /usr/src/app/conf/inject.template.js /usr/share/nginx/html/inject.template.js
COPY --from=build /usr/src/app/conf/nginx.conf /etc/nginx/conf.d/configfile.template
COPY --from=build /usr/src/app/conf/entrypoint.sh /

ENV PORT 80
ENV HOST 0.0.0.0

# Use envsubst to substitute the environment variable
RUN sh -c "envsubst '\$PORT' < /etc/nginx/conf.d/configfile.template > /etc/nginx/conf.d/default.conf"

# Ensure the entrypoint script is executable
RUN chmod +x /entrypoint.sh

EXPOSE 80

ENTRYPOINT ["sh", "/entrypoint.sh"]
